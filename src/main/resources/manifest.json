[
    {
      "name" : "perforce",
      "description" : "Perform Commands Against A Perforce Repository, using the Maven SCM Library <a href='http://maven.apache.org/scm/'>here</a>. <br>[host] hostname of the repository<br>[port] port the repository is listening on<br>[command] maven scm supported commands (checkout,update,status,...)<br>[version_type] tag, branch, revision<br>[version] identifier for the version type given<br>[username] user to access remote repository<br>[password] password to login to repository",
      "author" : "Sandy Squirrel",
      "version" : "${project.version}-${buildNumber}",
      "class" : "com.maestrodev.PerforceWorker",
      "type" : "java",
      "dependencies" : [ {
        "name" : "${project.artifactId}-${project.version}.jar"
      }, {
        "name" : "pom.xml"
      } ],
      "task" : {
        "command" : "/perforce/scm",
        "inputs" : {
          "command" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "path" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "host" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },"port" : {
            "required" : true,
            "type" : "Integer",
            "value" : 1666
          },
          "version_type" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "version" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "username" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "depot" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "project_path" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "password" : {
            "required" : false,
            "type" : "Password",
            "value" : ""
          },
          "auto_login" : {
            "required" : false,
            "type" : "Boolean",
            "value" : false
          }
        },
        "outputs" : {},
        "tool_name" : "SCM"
      }
    }
]
