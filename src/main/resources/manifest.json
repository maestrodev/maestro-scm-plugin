[
    {
      "name" : "perforce sync",
      "description" : "Sync Against A Perforce Repository. <br>[host] hostname of the repository<br>[port] port the repository is listening on<br>[command] maven scm supported commands (checkout,update,status,...)<br>[version_type] tag, branch, revision<br>[version] identifier for the version type given<br>[username] user to access remote repository<br>[password] password to login to repository",
      "author" : "Kelly Plummer",
      "version" : "${project.version}-${buildNumber}",
      "class" : "com.maestrodev.PerforceWorker",
      "type" : "java",
      "dependencies" : [ {
        "name" : "${project.artifactId}-${project.version}.jar"
      }, {
        "name" : "pom.xml"
      } ],
      "task" : {
        "command" : "/perforce/sync",
        "inputs" : {
          "path" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "host" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "port" : {
            "required" : true,
            "type" : "Integer",
            "value" : 1666
          },
          "username" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "remote_paths" : {
            "required" : true,
            "type" : "Array",
            "value" : ["//depot/someproject"]
          },
          "password" : {
            "required" : true,
            "type" : "Password",
            "value" : ""
          },
           "force_sync" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "no_update" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "bypass_client" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "bypass_server" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "delete_client" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "fail_on_up_to_date" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          },
           "clean_working_copy" : {
            "required" : true,
            "type" : "Boolean",
            "value" : false
          }
        },
        "outputs" : {},
        "tool_name" : "SCM"
      }
    }
]
