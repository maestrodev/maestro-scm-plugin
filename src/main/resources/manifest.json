      "author" : "Sandy Squirrel",
      "version" : "${project.version}-${buildNumber}",
      "class" : "com.maestrodev.ScmWorker",
      "type" : "java",
      "dependencies" : [ {
        "name" : "${project.artifactId}-${project.version}.jar"
      }, {
        "name" : "pom.xml"
      } ],
      "task" : {
        "command" : "/scm/scm",
        "inputs" : {
          "command" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "path" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "url" : {
            "required" : true,
            "type" : "String",
            "value" : ""
          },
          "version_type" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "version" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "username" : {
            "required" : false,
            "type" : "String",
            "value" : ""
          },
          "private_key" : {
            "required" : false,
            "type" : "Password",
            "value" : ""
          },
          "passphrase" : {
            "required" : false,
            "type" : "Password",
            "value" : ""
          },
          "password" : {
            "required" : false,
            "type" : "Password",
            "value" : ""
          }
        },
        "outputs" : {},
        "tool_name" : "SCM"
      }
    }
]
